###############################################
# Backend - Ejemplo de configuración (.env)
# Copiar como .env y ajustar valores según el entorno
###############################################

# ==================== APLICACIÓN ====================
APP_NAME="Sistema de Gestión de Socios"
APP_VERSION="2.0.0"
ENVIRONMENT=development   # development | staging | production
DEBUG=true                 # en production: false
PROJECT_NAME="Sistema de Gestión de Socios"

# ==================== BASE DE DATOS ====================
# Desarrollo local: SQLite o Postgres local
# DATABASE_URL=sqlite:///dev.db
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gestion_socios
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==================== SEGURIDAD ====================
# Cambiar SIEMPRE en producción. Usar mínimo 32 caracteres, aleatorios.
SECRET_KEY="cambia-esta-clave-larga-y-segura"
QR_SECRET_KEY="cambia-esta-clave-qr-larga-y-segura"
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== ORGANIZACIÓN ====================
ORG_PREFIX=CLUB
ORG_NAME="Mi Organización"
ORG_TYPE=generico

# ==================== CORS ====================
# En producción, NO usar localhost ni '*'
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_DECODE_RESPONSES=true

# ==================== EMAIL / SMTP ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME="Sistema de Gestión"
SMTP_TLS=true

# ==================== ARCHIVOS ====================
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["jpg","jpeg","png","pdf"]

# ==================== QR ====================
QR_VERSION=1
QR_ERROR_CORRECTION=H
QR_BOX_SIZE=10
QR_BORDER=4

# ==================== PAGINACIÓN ====================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==================== LOGS ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== AUDITORÍA ====================
# Días de retención de registros de auditoría
AUDIT_RETENTION_DAYS=90
# Directorio para archivos CSV de auditoría
AUDIT_ARCHIVE_DIR=archives/audit

# ==================== INTEGRACIONES (Opcional) ====================
MP_ACCESS_TOKEN=
MP_PUBLIC_KEY=
MP_WEBHOOK_SECRET=
SENTRY_DSN=
